{# templates/registration/index.html.twig #}

<!DOCYTPE html>
<html>
	<head>
		<link rel="stylesheet" href="{{asset('/style.css')}}">
		<meta charset="utf-8">
	</head>
	<body class="form">

		{{ form_start(form) }}
		<div>
			<h1>
				Inscription</h1>
			<a href="{{ path('app_login') }}">Déja inscrit</a>
		</div>
		<div>
			{{ form_label(form.name, 'Nom') }}
			{{ form_widget(form.name) }}
		</div>
		{{ form_row(form.email) }}
		<div>
			{{ form_label(form.password, 'Mot de passe') }}
			{{ form_widget(form.password.first) }}
		</div>
		<div>
			{{ form_label(form.password, 'Réecrivez le mot de passe') }}
			{{ form_widget(form.password.second) }}
		</div>
		<input type="submit" name="valider" value="S'inscrire"/>
		{{ form_end(form) }}
	</body>
</html>
